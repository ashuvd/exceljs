{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "object-curly-spacing": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "max-len": ["error", { "code": 100 }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-case-declarations": "off"
  },
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "google"]
}
